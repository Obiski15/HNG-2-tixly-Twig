{# Card Component #}
<div class="rounded-lg border border-border bg-card text-card-foreground shadow-sm {{ class|default('') }}">
    {% if title or description %}
    <div class="flex flex-col space-y-1.5 p-6">
        {% if title %}
        <h3 class="text-2xl font-semibold leading-none tracking-tight">
            {{ title }}
        </h3>
        {% endif %}
        {% if description %}
        <p class="text-sm text-muted-foreground">
            {{ description }}
        </p>
        {% endif %}
    </div>
    {% endif %}
    
    {% if content %}
    <div class="p-6 pt-0">
        {{ content|raw }}
    </div>
    {% endif %}
    
    {% if footer %}
    <div class="flex items-center p-6 pt-0">
        {{ footer|raw }}
    </div>
    {% endif %}
</div>
