{% extends "layouts/layout.twig" %}

{% block title %}Login - Tixly{% endblock %}

{% set showFooter = false %}

{% block main %}
<div class="wave-bg flex min-h-screen items-center justify-center px-4 py-12">
    <div class="bg-card border-border w-full max-w-md rounded-lg border shadow-xl">
        {# Card Header #}
        <div class="p-6 space-y-1">
            <div class="mb-2 flex items-center gap-2">
                {% include 'components/icons/log-in.twig' with { size: 24, class: 'text-primary' } %}
                <h1 class="text-2xl font-semibold">Welcome Back</h1>
            </div>
            <p class="text-muted-foreground text-sm">
                Enter your credentials to access your account
            </p>
        </div>

        {# Card Content #}
        <div class="p-6 pt-0">
            <form id="login-form" class="space-y-4">
                <div class="space-y-2">
                    <div>
                        {% include 'components/ui/label.twig' with {
                            'for': 'email',
                            'content': 'Email'
                        } %}
                    </div>
                    {% include 'components/ui/input.twig' with {
                        'type': 'email',
                        'id': 'email',
                        'name': 'email',
                        'placeholder': 'you@example.com',
                        'required': true
                    } %}
                    <span class="text-sm text-destructive" id="email-error"></span>
                </div>
                
                <div class="space-y-2">
                    <div>
                        {% include 'components/ui/label.twig' with {
                            'for': 'password',
                            'content': 'Password'
                        } %}
                    </div>
                    {% include 'components/ui/input.twig' with {
                        'type': 'password',
                        'id': 'password',
                        'name': 'password',
                        'placeholder': '••••••••',
                        'required': true
                    } %}
                    <span class="text-sm text-destructive" id="password-error"></span>
                </div>
                
                {% include 'components/ui/button.twig' with {
                    'type': 'submit',
                    'content': 'Login',
                    'class': 'w-full',
                    'attributes': 'id="login-button"'
                } %}
            </form>
            
            <div class="mt-4 text-center text-sm">
                <span class="text-muted-foreground">Don't have an account?</span>
                <a href="/signup" class="text-primary hover:underline ml-1">Sign up</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script type="module" src="/dist/js/pages/login.js"></script>
{% endblock %}
